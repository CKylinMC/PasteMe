{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "PasteMe",
  "version": "0.4.0",
  "identifier": "in.ckyl.pasteme",
  "build": {
    "beforeDevCommand": "yarn dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "yarn build",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "label": "main",
        "title": "PasteMe",
        "width": 800,
        "height": 600,
        "url": "/"
      },
      {
        "label": "context",
        "title": "PasteMe Context",
        "width": 400,
        "height": 476,
        "url": "/panel",
        "visible": false,
        "decorations": false,
        "resizable": false,
        "alwaysOnTop": true,
        "skipTaskbar": true,
        "transparent": true
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  }
}
